{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "kubernetes",
    "flux",
    "helm-values"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      ".*\\.yaml$"
    ]
  },
  "flux": {
    "fileMatch": [
      ".*\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)values\\.yaml$",
      "(^|/)values-.*\\.yaml$"
    ]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dependency Dashboard"
}
